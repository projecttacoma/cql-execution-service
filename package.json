{
  "name": "cqm-execution-service",
  "version": "0.0.1",
  "description": "CQM Execution Service",
  "main": "server.js",
  "repository": "https://github.com/projecttacoma/cqm-execution-service.git",
  "contributors": [
    {
      "name": "Cole Springate-Combs",
      "email": "cspringatecombs@mitre.org"
    },
